<div class="row">
  <div class="col-lg-6">
    <% if(flash && flash.err) { %>
	  <ul class="alert alert-success">
	<% Object.keys(flash.err).forEach(function(error) { %>
	  <li><%- flash.err[error] %></li>
	<% }) %>
	  </ul>
	<% } %>
    <div class="well well-lg">
      <form class="form-horizontal" role="form" action="/session/auth" method="post">
        <div class="form-group">
          <label for="username" class="col-sm-2 control-label">Username:</label>
          <div class="col-sm-10">
            <input type="text" value="<%=(flash && flash.uname) ? flash.uname : '' %>" class="form-control" id="username" name="username" placeholder="Enter Username">
          </div>
        </div>
        <div class="form-group">
          <label for="password" class="col-sm-2 control-label">Password:</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Sign in</button>
          </div>
        </div>
      </form>          
    </div>
  </div>
</div>