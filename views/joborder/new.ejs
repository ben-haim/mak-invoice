	<div class="col-lg-8">
		<div class="panel panel-default">
		  <div class="panel-heading"><i class="glyphicon glyphicon-plus"></i> Add New Job Request</div>
		  <div class="panel-body">

			<form role="form" method="post" action="/<%-project_code%>/<%-project_id%>/job-orders/create">

			  <div class="form-group">
			    <label for="title">Job Request:</label>
			    <input type="text" class="form-control" id="title" name="title" placeholder="Enter Job Request">
			  </div>

	 		  <div class="form-group">
			    <label for="requested_by">Requested By:</label>
			    <input type="text" class="form-control" name="requested_by" id="requested_by" placeholder="Leave empty if not applicable.">
			  </div>
			 
	 		  <div class="form-group">
			    <label for="date_requested">Date Requested:</label>
				<input type="text" class="form-control" value="" name="date_requested" id="dp1">
			  </div>
			 
	 		  <div class="form-group">
			    <label for="remarks">Remarks:</label>
			    <textarea class="form-control" id="remarks" name="remarks" placeholder="Enter Remarks"></textarea>
			  </div>

	 		  <div class="form-group">
			    <label for="amount">Amount:</label>
			    <input type="text" class="form-control" name="amount" id="amount" placeholder="Leave empty if not applicable.">
			    <input type="hidden"  name="status" value="0">
			  </div>

			  <button type="submit" class="btn btn-primary">Submit</button>

			</form>

		  </div>
		</div>
	</div>