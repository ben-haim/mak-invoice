<div class="modal fade " id="modal-joborder-selection" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
  <form method="post" action="/invoice/select" id="job-selection-form">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="modal-title"><i class="glyphicon glyphicon-ok"></i> Select Job Orders</h4>
        </div>
        <div class="modal-body">
            
            <div class="table-responsive" style="max-height:300px; overflow:auto;">
            <table class="table table-hover table-bordered">
                <thead>
                  <tr>
                    <th width="10"></th>
                    <th>Job Order #</th>
                    <th>Job Request</th>
                    <th>Date Requested</th>
                    <th>Date Completed</th>
                    <th>Amount</th>
                  </tr>
                </thead>

                <tbody>

                  <% for(key in job_orders){ %>
                    <%- partial('../../partials/joborder_selection.ejs', {joborder: job_orders[key]})%>              
                  <% } %>
                
                </tbody>
            </table>
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        	<button type="button" class="btn btn-primary" id="select-job-orders" data-loading-text="Loading...">Select</button>
        </div>
      </div>
    </div>
  </form>
</div