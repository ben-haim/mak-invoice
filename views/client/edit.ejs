<div class="row">
  <div class="col-lg-6">
    <% if(flash && flash.err) { %>
	  <ul class="alert alert-success">
	<% Object.keys(flash.err).forEach(function(error) { %>
	  <li><%- flash.err[error] %></li>
	<% }) %>
	  </ul>
	<% } %>
    <div class="well well-lg">
      <form class="form-horizontal" role="form" action="/client/update" method="post">
      	
      	<div class="col-sm-12">
		  <div class="form-group">
		    <label for="name">Name:</label>
		    <input type="text" value="<%= (client_details && client_details.name) ? client_details.name : '' %>" class="form-control" id="name" name="name" placeholder="Client Name">
		  </div>
		</div>   
		     	
      	<div class="col-sm-12">
		  <div class="form-group">
		    <label for="company">Company:</label>
		    <input type="text" value="<%= (client_details && client_details.company) ? client_details.company : '' %>" class="form-control" id="company" name="company" placeholder="Name of Company">
		  </div>
		</div>  

       	<div class="col-sm-12">
		  <div class="form-group">
		    <label for="designation">Designation:</label>
		    <input type="text" value="<%= (client_details && client_details.designation) ? client_details.designation : '' %>" class="form-control" id="designation" name="designation" placeholder="Designation">
		  </div>
		</div> 

		<div class="col-sm-12">
		  <div class="form-group">
		    <label for="address">Address:</label>
		    <input type="text" value="<%= (client_details && client_details.address) ? client_details.address : '' %>" class="form-control" id="address" name="address" placeholder="Address">		   
		  </div>
		</div>  
      
        <div class="form-group">
          <div class="col-sm-12">
          	<input type="hidden" name="id" value="<%= (client_details && client_details.id) ? client_details.id : ''%>" id="id">          	
            <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-ok"></i> Submit</button>
          </div>
        </div>
      </form>          
    </div>
  </div>
</div>