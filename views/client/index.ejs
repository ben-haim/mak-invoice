<div class="row">
  <div class="col-lg-12>">
    &nbsp;&nbsp;&nbsp;&nbsp;<a href="/client/new" class="btn btn-danger"><i class="glyphicon glyphicon-plus"></i> New Client</a>
  </div>
</div>
<br>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Company</th>
      <th>Designation</th>
      <th>Address</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>

  <% for (var prop in client_list) { %>
    <tr>
      <td><%= client_list[prop].id %></td>
      <td><%= client_list[prop].name %></td>
      <td><%= client_list[prop].company %></td>
      <td><%= client_list[prop].designation %></td>
      <td><%= client_list[prop].address %></td>
      <td>
        <a href="/client/edit/<%= client_list[prop].id %>" title="Edit" alt="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
        <a href="javascript:void(0);" onClick="setClientAsInactive(<%= client_list[prop].id %>)" title="Delete" alt="Delete">
          <i class="glyphicon glyphicon-trash"></i>
        </a>
      </td>
    </tr>
  <% }%>    

  </tbody>
</table>


<div class="modal fade" id="modal-confirm" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="modal-title">Deactivate Client</h4>
      </div>
      <div class="modal-body">
        <blockquote>
      <p><i class="glyphicon glyphicon-question-sign"></i> Are you sure you want to deactivate this client?</p>
    </blockquote>
        
      </div>
      <div class="modal-footer">
        
        <form id="deactivate-modal-form" method="post" action="/client/deactivate/">
          <input type="hidden" name="id" id="deactivate-id">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Yes</button>
      </form>
      </div>
    </div>
  </div>
</div>

<script>
function setClientAsInactive(client_id){
    $('#deactivate-id').val(client_id);
    $('#modal-confirm').modal('show');  
}
</script>