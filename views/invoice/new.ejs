<div class="row">

    <% if(flash && flash.err) { %>
	  <ul class="alert alert-success">
	<% Object.keys(flash.err).forEach(function(error) { %>
	  <li><%- flash.err[error] %></li>
	<% }) %>
	  </ul>
	<% } %>

<style>
	.invi{border:none; padding:0px 6px;}
	.invi-bold{font-weight:bold;}
</style>
	<div class="col-lg-10 col-lf-offset-2">
		<div class="panel panel-default">
		  <div class="panel-heading"><i class="glyphicon glyphicon-plus"></i> Add New Invoice</div>
		  <div class="panel-body">
		      <form class="form-horizontal" role="form" action="/invoice/create" method="post">

		      	<div class="col-sm-12">
				  <div class="form-group">
				    <label for="description"><u>SERVICE BILLING</u></label>
					<div><strong>No.: </strong> &lt;system generated&gt;</div>
				    <div>
				    	<strong class="pull-left">Date:</strong><input type="text" name="date_generated" id="date_generated" class="invi datepicker" value="<%-date_generated%>">
			    	</div>				    
				  </div>
				</div>

				<div class="col-sm-12"></div>

		      	<div class="col-sm-12">
				  <div class="form-group"><br>
				    <label for="description"><u>CLIENT DETAILS</u></label>
				    <div><strong>Name:</strong> <%-client.name %></div>
				    <div><strong>Company:</strong> <%-client.company %></div>
				    <div><strong>Designation:</strong> <%-client.designation %></div>
				    <div><strong>Address:</strong> <%-client.address %></div>
				  </div>
				</div>

				<div class="col-sm-12"></div>

		      	<div class="col-sm-12">
				  <div class="form-group"><br>
				    <label for="description"><u>BILLING DETAILS</u></label>
				  </div>
				</div>

				<table class="table table-hover table-bordered">
			      <thead>
			        <tr>
			          <th width="10"></th>			        	
			          <th>Job Order No.#</th>
			          <th>Particulars / Remarks</th>
			          <th>Date Completed</th>
			          <th class="text-center">Amount</th>
			        </tr>
			      </thead>

			      <tbody id="selected-joborders-container">
			      </tbody>

			      <tbody>
					<tr>
		      	      <td><a href="#" data-toggle="modal" data-target="#modal-joborder-selection"><i class="glyphicon glyphicon-zoom-in"></i></a></td>
		      	      <th colspan="3" class="text-right">Total:</th>
		      	      <th class="text-right">P  <span id="total-amount-holder">0.00</span></th>
		      	      <input type="hidden" name="total_amount" id="total-amount" value="0">
		      	      <input type="hidden" name="total_amount" id="total-amount-raw" value="0">
		      	      <input type="hidden" name="status" id="status" value="0">
		      	      <input type="hidden" name="project_id" value="<%- project_id %>">
		      	      <input type="hidden" name="joborder_id" id="joborder-id">
		      	    </tr>			      	
			      </tbody>

				</table>
				<br><br>
				<textarea class="invi form-control" name="footer_note" placeholder="Enter footer note or remarks here"></textarea>
				<br>
				<br>
				<br>
				<br>
				<div class="row">
					<div class="col-lg-5">
						<input type="text" name="footer_name" class="invi invi-bold form-control" value="<%- req.session.userSessionObject.full_name %>">
					</div>	
				</div>
				<div class="row">
					<div class="col-lg-5">
						<input type="text" name="footer_description" class="invi form-control" value="IT Consultant">
					</div>	
				</div>

				<br><br>
			    <div class="well well-sm">

	  			  <button type="submit" class="btn btn-primary" id="save-invoice"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
			        	
			    </div>

		      </form>   
		  </div>
		</div>

	</div>
</div>

<!-- //load modal for joborder selection -->
<%- partial('../partials/modals/joborder_selection.ejs')%>
